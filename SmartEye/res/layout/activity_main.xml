<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="377dp"
        android:text="Start Service" />

    <Button
        android:id="@+id/stopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="168dp"
        android:layout_y="376dp"
        android:text="Stop Service" />

    <CheckBox
        android:id="@+id/use_RGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="124dp"
        android:text="Use RGB" />

    <CheckBox
        android:id="@+id/use_LUMA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="152dp"
        android:text="Use LUMA" />

    <CheckBox
        android:id="@+id/use_STATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="180dp"
        android:text="Use STATE" />

    <CheckBox
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="152dp"
        android:text="Save Changes" />

    <CheckBox
        android:id="@+id/save_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="180dp"
        android:text="Save Original" />

    <CheckBox
        android:id="@+id/save_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="124dp"
        android:text="Save Previous" />
        

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="355dp"
        android:text="Status: " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="77dp"
        android:layout_y="8dp"
        android:text="Surveillance Knobs"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/checkAccel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="33dp"
        android:text="Accelerometer" />

    <CheckBox
        android:id="@+id/checkSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="33dp"
        android:text="Sound Amplitude" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="214dp"
        android:text="Choose any one" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="110dp"
        android:layout_y="238dp"
        android:text="Video Knobs"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/checkGyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="54dp"
        android:text="Gyroscope" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="88dp"
        android:text="Camera Surveillance Knobs"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/record"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="257dp"
        android:text="Record &amp; Upload" />

    <CheckBox
        android:id="@+id/stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="173dp"
        android:layout_y="257dp"
        android:text="Live Stream" />

   
    <EditText
    android:id="@+id/edit"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_x="7dp"
    android:layout_y="317dp"
    android:inputType="phone"
    android:imeOptions="actionSend" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="56dp"
        android:layout_y="295dp"
        android:text="Enter alert device number"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</AbsoluteLayout>